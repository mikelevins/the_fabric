#!/bin/sh

export thisdir="`dirname \"$0\"`"
export PROJECT_HOME="`( cd \"$thisdir/../..\" && pwd )`"
export LOCAL_ASSETS="${PROJECT_HOME}/the_fabric_assets"
export LOCAL_LIBS="${PROJECT_HOME}/the_fabric_libraries"

export REMOTE_LIBS="explorersguild.com:/var/www/xg/fabric/jar/"
export REMOTE_ASSETS="explorersguild.com:/var/www/xg/fabric/assets/"

echo  "checking assets to be pushed..."
rsync -avun -e "ssh -o StrictHostKeyChecking=no " ${LOCAL_ASSETS} ${REMOTE_ASSETS}

echo  "checking assets to be pulled..."
rsync -avun -e "ssh -o StrictHostKeyChecking=no "  ${REMOTE_ASSETS} ${PROJECT_HOME}

echo  "checking libraries to be pushed..."
rsync -avun -e "ssh -o StrictHostKeyChecking=no " ${LOCAL_LIBS} ${REMOTE_LIBS}

echo  "checking libraries to be pulled..."
rsync -avun -e "ssh -o StrictHostKeyChecking=no "  ${REMOTE_LIBS} ${PROJECT_HOME}

echo
echo "...done."
echo

