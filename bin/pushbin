#!/bin/sh

export thisdir="`dirname \"$0\"`"
export FABRIC_HOME="`( cd \"$thisdir/..\" && pwd )`"
export LOCAL_LIBS="`( cd \"$thisdir/../../the_fabric_libraries\" && pwd )`"
export LOCAL_ASSETS="`( cd \"$thisdir/../../the_fabric_assets\" && pwd )`"

export REMOTE_LIBS="explorersguild.com:/var/www/xg/fabric/jar/"
export REMOTE_ASSETS="explorersguild.com:/var/www/xg/fabric/assets/"

echo  "pushing assets to ${REMOTE_ASSETS}..."
rsync -avz -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" --progress ${LOCAL_ASSETS} ${REMOTE_ASSETS} 

echo  "pushing libraries to ${REMOTE_LIBS}..."
rsync -avz -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" --progress ${LOCAL_LIBS} ${REMOTE_LIBS} 

echo "...done."
echo
